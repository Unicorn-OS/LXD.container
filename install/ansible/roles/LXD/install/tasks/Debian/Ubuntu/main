---
- name: Install LXD snap
  community.general.snap:
    name:
      - lxd
  become: true

- name: add $USER to lxd group
  ansible.builtin.user:
    name: "{{ansible_user}}"
    groups: lxd
    append: yes
  notify: Reset connection
  become: true

- name: Flush handlers so lxd as a regular user will work
  meta: flush_handlers