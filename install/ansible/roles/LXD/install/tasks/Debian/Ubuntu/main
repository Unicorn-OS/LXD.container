---
- name: Install LXD snap
  community.general.snap:
    name:
      - lxd
  become: true

- name: add $USER to lxd group
  ansible.builtin.user:
    name: "{{ansible_user}}"
    groups: lxd
    append: yes
  notify: reset connection
  become: true

- name: reset connection so lxd works as a regular user
  meta: flush_handlers
