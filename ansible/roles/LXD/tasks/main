---
- name: Installation
  community.general.snap:
    name:
      - lxd
  become: true
  notify:
    - restart.os
    - ask manually restart

- name: halt and manually restart if local
  meta: end_host
  when: ansible_connection == 'local'

- name: allow non-root user
  user:
    name: '{{ansible_user}}'
    groups: lxd
    append: yes
  become: true

# https://ubuntu.com/server/docs/containers-lxd
